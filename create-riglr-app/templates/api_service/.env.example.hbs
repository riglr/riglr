# Logging level (debug, info, warn, error)
RUST_LOG=info

# Server configuration
PORT=8080
HOST=0.0.0.0

# Application settings
APP_NAME={{project_name}}
APP_VERSION=0.1.0

# Network configuration (standardized keys for riglr-config)
{{#if has_solana}}
# Solana configuration (use devnet for testing)
RPC_URL_SOLANA=https://api.devnet.solana.com
SOLANA_PRIVATE_KEY=your_private_key_here
{{/if}}

{{#if has_evm}}
# EVM configuration (chain IDs: 1=Ethereum, 137=Polygon, etc.)
RPC_URL_1=https://mainnet.infura.io/v3/your_project_id
ETH_PRIVATE_KEY=your_private_key_here
{{/if}}

{{#if has_database}}
# Database configuration
DATABASE_URL=postgresql://user:password@localhost/{{project_name}}
{{/if}}

{{#if has_redis}}
# Redis configuration
REDIS_URL=redis://localhost:6379
{{/if}}

# AI Provider API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
