# {{project-name}} Configuration
# Copy this file to .env and fill in your actual API keys and configurations

# ================================
# AI Provider Configuration
# ================================
# Choose your preferred LLM provider and configure accordingly

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Or other providers supported by rig-core
# PROVIDER_API_KEY=your_provider_key_here

# ================================
# Blockchain RPC Endpoints
# ================================

{% if primary-chain == "solana" or primary-chain == "both" -%}
# Solana RPC Configuration
SOLANA_RPC_URL={{solana-rpc-url}}
# Alternative endpoints:
# SOLANA_RPC_URL=https://api.devnet.solana.com  # For development
# SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/your-key
# SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=your-key

# Solana Wallet Configuration (if needed for trading)
# SOLANA_PRIVATE_KEY=your_base58_encoded_private_key
# SOLANA_WALLET_ADDRESS=your_wallet_public_key

{% endif %}

{% if primary-chain == "ethereum" or primary-chain == "both" -%}
# Ethereum RPC Configuration
ETHEREUM_RPC_URL={{ethereum-rpc-url}}
# Alternative endpoints:
# ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-key  # For development
# ETHEREUM_RPC_URL=https://ethereum.publicnode.com  # Free public endpoint
# ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-key

# Ethereum Wallet Configuration (if needed for trading)
# ETHEREUM_PRIVATE_KEY=your_hex_encoded_private_key
# ETHEREUM_WALLET_ADDRESS=your_wallet_address

{% endif %}

# ================================
# Web Data API Keys
# ================================

{% if include-web-tools -%}
# Twitter/X API Configuration
# Get these from https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# DexScreener API (usually no key required for basic usage)
# DEXSCREENER_API_KEY=your_dexscreener_key  # If using premium features

# Web Search API (Exa)
# Get from https://exa.ai/
EXA_API_KEY=your_exa_api_key_here

# News API Configuration
# Get from https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# CryptoPanic API (for crypto-specific news)  
# Get from https://cryptopanic.com/developers/api/
CRYPTOPANIC_KEY=your_cryptopanic_key_here

{% endif %}

# ================================
# Database Configuration
# ================================

{% if include-graph-memory -%}
# Neo4j Graph Database (for knowledge storage)
NEO4J_URL=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

{% endif %}

# Redis (for job queue and caching)
REDIS_URL=redis://localhost:6379
# For Redis with authentication:
# REDIS_URL=redis://:password@localhost:6379

# ================================
# Application Configuration
# ================================

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# Application environment (development, staging, production)
APP_ENV=development

# Port for web interface (if implemented)
PORT=3000

# ================================
# Trading Configuration (if applicable)
# ================================

{% if agent-type == "trading-bot" -%}
# Maximum trade size (in USD)
MAX_TRADE_SIZE_USD=1000

# Risk management settings
STOP_LOSS_PERCENTAGE=5.0
TAKE_PROFIT_PERCENTAGE=10.0

# Minimum balance thresholds
MIN_SOL_BALANCE=0.1
MIN_ETH_BALANCE=0.01

{% endif %}

# ================================
# Monitoring & Alerting
# ================================

# Webhook URLs for notifications
ALERT_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Email notifications (if implemented)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# ================================
# Development Settings
# ================================

# Enable debug mode
DEBUG=false

# Test mode (for development - avoids real transactions)
TEST_MODE=true

# API rate limiting
API_RATE_LIMIT_PER_MINUTE=60

# Cache TTL in seconds
CACHE_TTL=3600