# ================================================
# RIGLR PRODUCTION CONFIGURATION
# ================================================
# Copy this file to .env and fill in your values
# 
# SECURITY WARNING: Never commit .env files with real keys!
# ================================================

# ================================================
# AI PROVIDER CONFIGURATION
# ================================================
# Anthropic API key for Claude models
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API key (optional, for GPT models)
OPENAI_API_KEY=your-openai-api-key-here

# ================================================
# DATABASE CONFIGURATION
# ================================================
# Redis for job queue and caching
REDIS_URL=redis://localhost:6379

# Neo4j for graph memory (knowledge graph)
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ================================================
# BLOCKCHAIN RPC ENDPOINTS
# ================================================
# Convention-based RPC URLs: RPC_URL_{CHAIN_ID}
# Add any EVM chain by setting RPC_URL_{CHAIN_ID}

# Ethereum Mainnet (Chain ID: 1)
RPC_URL_1=https://eth.llamarpc.com

# Polygon (Chain ID: 137)
RPC_URL_137=https://polygon.llamarpc.com

# Arbitrum One (Chain ID: 42161)
RPC_URL_42161=https://arb1.arbitrum.io/rpc

# Base (Chain ID: 8453)
RPC_URL_8453=https://mainnet.base.org

# Optimism (Chain ID: 10)
RPC_URL_10=https://mainnet.optimism.io

# BSC (Chain ID: 56)
RPC_URL_56=https://bsc-dataseed.binance.org

# Avalanche C-Chain (Chain ID: 43114)
RPC_URL_43114=https://api.avax.network/ext/bc/C/rpc

# Solana RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ================================================
# BLOCKCHAIN API KEYS
# ================================================
# Alchemy for enhanced RPC services
ALCHEMY_API_KEY=your-alchemy-api-key

# Infura backup RPC
INFURA_API_KEY=your-infura-api-key

# ================================================
# CROSS-CHAIN TOOLS
# ================================================
# Li.Fi for cross-chain bridging
LIFI_API_KEY=your-lifi-api-key

# ================================================
# WEB DATA APIS
# ================================================
# Twitter/X API
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# DexScreener API (if required)
DEXSCREENER_API_KEY=optional-dexscreener-key

# Web search (Exa)
EXA_API_KEY=your-exa-api-key

# Crypto news aggregation
NEWSAPI_KEY=your-newsapi-key

# LunarCrush social analytics
LUNARCRUSH_API_KEY=your-lunarcrush-key

# Token holder analysis
FASTER100X_API_KEY=your-faster100x-key

# ================================================
# WALLET CONFIGURATION
# ================================================
# WARNING: Use test keys only! Never use mainnet private keys in .env files

# EVM private key (for development/testing only)
EVM_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Solana private key (base58 encoded, for development/testing only)
SOLANA_PRIVATE_KEY=your-base58-encoded-solana-private-key

# ================================================
# AUTHENTICATION & SECURITY
# ================================================
# JWT secret for API authentication
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# API rate limiting
RATE_LIMIT_PER_MINUTE=60

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ================================================
# SERVER CONFIGURATION
# ================================================
# Server port
PORT=8080

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ================================================
# FEATURE FLAGS
# ================================================
# Enable/disable specific features
ENABLE_TRADING=true
ENABLE_BRIDGING=true
ENABLE_SOCIAL_MONITORING=true
ENABLE_GRAPH_MEMORY=false

# ================================================
# MONITORING & OBSERVABILITY
# ================================================
# OpenTelemetry endpoint (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn

# ================================================
# DEVELOPMENT SETTINGS
# ================================================
# Use testnet instead of mainnet
USE_TESTNET=false

# Testnet RPC URLs (when USE_TESTNET=true)
RPC_URL_11155111=https://eth-sepolia.g.alchemy.com/v2/your-key  # Sepolia
RPC_URL_80001=https://rpc-mumbai.maticvigil.com  # Polygon Mumbai
SOLANA_TESTNET_RPC_URL=https://api.devnet.solana.com

# ================================================
# ADVANCED CONFIGURATION
# ================================================
# Transaction settings
MAX_GAS_PRICE_GWEI=100
PRIORITY_FEE_GWEI=2
SLIPPAGE_TOLERANCE_PERCENT=0.5

# Retry configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
RETRY_BACKOFF_MULTIPLIER=2

# Cache TTL (seconds)
CACHE_TTL_SECONDS=300

# ================================================
# NOTES
# ================================================
# 1. NEVER commit this file with real API keys or private keys
# 2. Use environment-specific .env files (.env.local, .env.production)
# 3. Keep production secrets in a secure vault (AWS Secrets Manager, etc.)
# 4. Rotate API keys regularly
# 5. Monitor API usage to detect anomalies
# 6. Use read-only RPC endpoints when possible
# 7. Enable rate limiting on all external API calls
# ================================================